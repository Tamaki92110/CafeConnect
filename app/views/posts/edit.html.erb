<div class="profile-edit">

  <%= form_for @post do |f| %>

  <div class="edit">    
    <%= f.label :cafe_name %><br />
    <%= f.text_field :cafe_name, :size => 30 %>
  </div>
  
  <div class="edit"> 
    <%= f.label :about %><br />
    <%= f.text_area :about, :size => "30x2" %>
  </div>
  
  <div class="edit"> 
    <%= f.label :address %><br />
    <%= f.text_field :address, :size => 30 %>
  </div>
  
  <div class="edit"> 
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 30 %>
  </div>

  <%= f.submit "編集" ,  class: "edit-botan" %>
  <% end %>

</div>